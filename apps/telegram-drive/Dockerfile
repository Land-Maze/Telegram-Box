# Run the container with `docker run -p 3000:3000 -t telegram-drive`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system telegram-drive && \
          adduser --system -G telegram-drive telegram-drive

COPY dist/apps/telegram-drive telegram-drive
RUN chown -R telegram-drive:telegram-drive .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix telegram-drive --omit=dev -f install

CMD [ "node", "telegram-drive" ]
